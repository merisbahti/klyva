{
  "version": "0.8.6",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/merisbahti/klyva.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests --env jest-environment-jsdom-sixteen",
    "test:watch": "tsdx test --passWithNoTests --env jest-environment-jsdom-sixteen --watch",
    "lint": "tsdx lint",
    "prepare": "tsdx build"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "// REMOVE WHEN NEW VERSION OF TSDX IS RELEASED1": {},
  "// REMOVE WHEN NEW VERSION OF TSDX IS RELEASED2": {},
  "// REMOVE WHEN NEW VERSION OF TSDX IS RELEASED3": {},
  "// REMOVE WHEN NEW VERSION OF TSDX IS RELEASED4": {},
  "// REMOVE WHEN NEW VERSION OF TSDX IS RELEASED5": {},
  "resolutions": {
    "**/typescript": "^4.0.5",
    "**/@typescript-eslint/eslint-plugin": "^4.6.1",
    "**/@typescript-eslint/parser": "^4.6.1"
  },
  "name": "klyva",
  "author": "Meris Bahtijaragic",
  "module": "dist/klyva.esm.js",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@testing-library/react": "^11.0.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-loader": "^8.1.0",
    "callbag": "^1.3.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "ts-loader": "^8.0.3",
    "tsdx": "^0.13.3",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "callbag-merge": "^3.2.2",
    "callbag-share": "^1.2.0",
    "callbag-subscribe": "^1.5.1",
    "callbag-take": "^1.5.0",
    "fast-deep-equal": "^3.1.3",
    "optics-ts": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "no-redeclare": "off",
      "@typescript-eslint/no-redeclare": [
        "error"
      ],
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "unused-imports/no-unused-vars-ts": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
